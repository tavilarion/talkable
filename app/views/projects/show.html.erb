<div class="max-w-2xl mb-32 px-6 py-24 mx-auto space-y-12 dark:bg-gray-800 dark:text-gray-50">
  <div class="w-full mx-auto space-y-4 text-center">
    <p class="text-xs font-semibold tracking-wider">#AwesomeProjects</p>
    <h1 class="text-4xl font-bold leading-tight md:text-5xl"><%= @project.name %></h1>
    <p class="text-sm dark:text-gray-400">
      Created on <%= @project.created_at&.strftime("%B %-d, %Y") %>
    </p>
  </div>

  <div class="dark:text-gray-100">
    <p>
      <%= @project.description %>
    </p>
  </div>

  <%= turbo_frame_tag 'edit_project' do %>
    <%= render 'status', project: @project %>
  <% end %>

  <div class="pt-12 border-t dark:border-gray-700 flex items-center justify-between">
    <span class="text-lg font-semibold">Comments</span>
    <%= link_to "New comment",
                new_project_comment_path(@project),
                data: { turbo_frame: "new_comment" },
                class: "px-2 py-1 font-bold rounded dark:bg-violet-400 dark:text-gray-900" %>
  </div>

  <%= turbo_frame_tag 'new_comment' %>

  <%= turbo_frame_tag 'comments' do %>
    <%= render @project.comments %>
  <% end %>
</div>
